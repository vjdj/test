REM changing internet time 
reg add "HKEY_LOCAL_MACHINE\SOFTWARE\Microsoft\Windows\CurrentVersion\DateTime\Servers" /v 25 /t REG_SZ /d fog-gmp.local.iut-troyes.univ-reims.fr /f
reg add "HKEY_LOCAL_MACHINE\SOFTWARE\Microsoft\Windows\CurrentVersion\DateTime\Servers" /ve /d 25 /f
echo internet time synchronisation set to fog server GMP

REM opening wmic port

netsh advfirewall firewall add rule dir=in name="DCOM" program=%systemroot%\system32\svchost.exe service=rpcss action=allow protocol=TCP localport=135 

netsh advfirewall firewall add rule dir=in name="WMI" program=%systemroot%\system32\svchost.exe service=winmgmt action=allow protocol=TCP localport=any 

netsh advfirewall firewall add rule dir=out name="WMI_OUT" program=%systemroot%\system32\svchost.exe service=winmgmt action=allow protocol=TCP localport=any 

netsh advfirewall firewall add rule dir=out name ="WMI-rpcss" program=%systemroot%\system32\svchost.exe service=rpcss action=allow protocol=TCP localport=any 

netsh advfirewall firewall add rule dir=in name ="WMI-async" program=%systemroot%\system32\svchost.exe service=async action=allow protocol=TCP localport=any

Echo Wmic port opened

REM psexec port opening

netsh advfirewall firewall add rule name="psexec Port 445" dir=in action=allow protocol=TCP localport=445

Echo psexec port opened

REM activating remote desktop

netsh advfirewall firewall set rule name="Bureau à distance (TCP-Entrée)" new enable=Yes

reg add "HKEY_LOCAL_MACHINE\SYSTEM\CurrentControlSet\Control\Terminal Server" /v fDenyTSConnections /t REG_DWORD /d 0 /f

Echo remote desktop activated

REM allow ping response

netsh advfirewall firewall add rule name="All ICMP V4" protocol=icmpv4:any,any dir=in action=allow

Echo ping response activated

REM Stoping  service adobe,googleupdate,windowssearch,windowsupdates
net stop AdobeFlashPlayerUpdateSvc
net stop AdobeARMservice
net stop gupdate
net stop Wsearch
net stop WMPNetworkSvc

REM Disable the services
REM Disabling service Adobe flash player update
sc config AdobeFlashPlayerUpdateSvc start= disabled
REM Disabling service adobe update
sc config AdobeARMservice start= disabled
REM Disabling service google update
sc config gupdate start= disabled
REM Disabling service windows search
sc config wsearch start= disabled
REM Disabling service windows updates
sc config wuauserv start= demand
REM Disabling service service partgae reseau du lecture windows media
sc config WMPNetworkSvc start= disabled
REM Disabling service carte a puce
sc config SCardSvr start= disabled

Install-ChocolateyPinnedTaskBarItem "C:\Program Files (x86)\Google\Chrome\Application\chrome.exe"
Install-ChocolateyPinnedTaskBarItem "C:\Program Files\Sublime Text 3\sublime_text.exe"

